//from Hussain Patel -- https://www.hackster.io/hussainpatel/blinking-leds-using-particle-photon-dd9cbc


int led1 = D0; 
int led2 = D1; 

void setup() {
 pinMode(led1, OUTPUT);
 pinMode(led2, OUTPUT);
}


void loop() {

  digitalWrite(led1, HIGH);
  digitalWrite(led2, HIGH);

  delay(1000); // delayed for half a second

  digitalWrite(led1, LOW);
  digitalWrite(led2, LOW);

  // Wait 1 second...
  delay(500);

  // And repeat!
}
